{
    "name": "visiosoft/streams-composer-plugin",
    "description": "Composer plugin for streams platform.",
    "keywords": ["streams","composer","plugin"],
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Osvaldo Brignoni",
            "email": "obrignoni@anomaly.is"
        }
    ],
    "require": {
        "composer-plugin-api": "*"
    },
    "require-dev": {
        "composer/composer": "*",
        "codeclimate/php-test-reporter": "dev-master",
        "henrikbjorn/phpspec-code-coverage": "~0.2",
        "phpspec/phpspec": "2.0.*@dev"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Anomaly\\StreamsComposerPlugin\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "class": "Visiosoft\\StreamsComposerPlugin\\Plugin",
        "branch-alias": {
            "dev-master": "*"
        }
    }
}
